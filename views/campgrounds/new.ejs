<%=layout('layout/boiler') %>
<div class="row">
<div class="col-6 offset-3">
    <h1 class="text-center">Share, if you care</h1>
    <form action="/campgrounds" method="post">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" name="campground[title]" id="title" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" name="campground[location]" id="location" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="price">Price</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text"class="form-control" name="campground[price]" id="price" placeholder="0.00" aria-describedby="price-label">
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="image">Image URL</label>
            <input class="form-control" type="text" name="campground[image]" id="image">
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" name="campground[description]" id="description" required></textarea>
        </div>
        <div class="mb-3">
            <button class="btn btn-success">Add Campground</button>
        </div>
    </form>
    <a href="/campgrounds">Back to Previous</a>
</div>
</div>
